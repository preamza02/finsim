---
const plans = [
  {
    name: 'Community',
    price: 'Free',
    period: 'forever',
    description: 'Perfect for individuals who want full control of their financial planning.',
    features: [
      'Full financial simulation engine',
      'Monte Carlo analysis',
      'Retirement projections',
      'Tax optimization tools',
      'Self-hosted on your machine',
      'All future core features',
      'Community support via GitHub',
    ],
    cta: 'Get Started',
    ctaLink: 'https://github.com/preamza02/finsim',
    highlighted: true,
  },
  {
    name: 'Contributor',
    price: 'Sponsor',
    period: 'your choice',
    description: 'Support the project and help us build the future of open-source finance.',
    features: [
      'Everything in Community',
      'Priority feature requests',
      'Direct support channel',
      'Early access to new features',
      'Recognition in contributors list',
      'Help shape the roadmap',
    ],
    cta: 'Become a Sponsor',
    ctaLink: 'https://github.com/sponsors/preamza02',
    highlighted: false,
  },
  {
    name: 'Enterprise',
    price: 'Custom',
    period: 'contact us',
    description: 'For organizations that need custom solutions and dedicated support.',
    features: [
      'Everything in Community',
      'Custom feature development',
      'Dedicated support',
      'On-premise deployment help',
      'Training and onboarding',
      'SLA guarantees',
    ],
    cta: 'Contact Us',
    ctaLink: 'mailto:contact@finsim.io',
    highlighted: false,
  },
];
---

<section id="pricing" class="section-padding bg-white">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Simple, Transparent Pricing
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        FinSim is open source and free. We believe everyone deserves access to 
        powerful financial planning tools.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {plans.map((plan) => (
        <div class={`relative p-8 rounded-2xl border-2 ${plan.highlighted ? 'border-primary-500 shadow-xl' : 'border-gray-200'} bg-white`}>
          {plan.highlighted && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2">
              <span class="bg-primary-600 text-white text-sm font-semibold px-4 py-1 rounded-full">
                Most Popular
              </span>
            </div>
          )}
          
          <div class="text-center mb-8">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{plan.name}</h3>
            <div class="flex items-baseline justify-center gap-1">
              <span class="text-4xl font-bold text-gray-900">{plan.price}</span>
              <span class="text-gray-500">/ {plan.period}</span>
            </div>
            <p class="text-gray-600 mt-4">{plan.description}</p>
          </div>

          <ul class="space-y-4 mb-8">
            {plan.features.map((feature) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">{feature}</span>
              </li>
            ))}
          </ul>

          <a 
            href={plan.ctaLink}
            target={plan.ctaLink.startsWith('http') ? '_blank' : undefined}
            rel={plan.ctaLink.startsWith('http') ? 'noopener noreferrer' : undefined}
            class={`block w-full text-center py-3 px-6 rounded-lg font-semibold transition-colors duration-200 ${plan.highlighted ? 'bg-primary-600 hover:bg-primary-700 text-white' : 'bg-gray-100 hover:bg-gray-200 text-gray-900'}`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
